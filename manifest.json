{

  "manifest_version": 2,
  "name": "Aternify++",
  "version": "5.2.0.3",
  "permissions": ["*://*.aternos.org/*", "theme", "alarms", "tabs"],
  "web_accessible_resources": ["js/css/styles.css", "js/css/styles2.css"],

  "description": "A better Aternos experience. Adblocker, element remover and more.",

  "author": "Peter Tsonis",

  "icons": {
    "48": "icons/48-new.png",
    "128": "icons/128-new.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.aternos.org/*"],
      "js": ["js/aternify.js"],
      "css": ["css/styles.css"],
      "run_at": "document_start"
    }
  ],

  "background": {
    "scripts": ["js/background.js"]
  },

  "browser_action": {
    "default_popup": "pages/popup2.html",
    "default_icon": {
      "48": "icons/48-new.png",
      "128": "icons/128-new.png"
    },
    "default_title": "Aternify++"
  },

  "options_ui": {
    "page": "pages/Aternify++.html",
    "open_in_tab": true
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "aternify@hypeware.weebly.com"
    }
  }

}
