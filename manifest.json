{

  "manifest_version": 2,
  "name": "Aternify Ultimate",
  "short_name": "Aternify",
  "version": "8.0",
  "permissions": ["*://*.aternos.org/*", "tabs"],
  "web_accessible_resources": ["css/styles.css", "main.js"],

  "description": "The Ultimate Aternos experience. Adblocker, element remover, Anti-AdBlock remover and more!",

  "author": "DaBluLite",

  "icons": {
    "48": "icons/48-new.png",
    "128": "icons/128-new.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://*.aternos.org/*"],
      "js": ["main.js"],
      "css": ["css/styles.css"],
      "run_at": "document_start"
    }
  ],
  
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "Aternify Search",
      "search_url": "https://minecraftservers.org/search/{searchTerms}",
      "keyword": "@aternify-search",
      "favicon_url": "favicon.ico",
      "is_default": false
    }
  },

  "browser_action": {
    "default_icon": {
      "48": "icons/48-new.png",
      "128": "icons/128-new.png"
    },
    "default_title": "Aternify Ultimate"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "aternify-ultimate@hypeware.weebly.com"
    }
  }

}
